<Window x:Class="InterfaceGrafica.WindowVendaQuantidade"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfaceGrafica"
        mc:Ignorable="d"
        Title="WindowVendaQuantidade" Height="300" Width="400">
    <Grid>
        <Label FontSize="20" Content="Produto: " HorizontalAlignment="Left" Margin="28,69,0,0" VerticalAlignment="Top"/>
        <TextBlock FontSize="15" HorizontalAlignment="Left" Margin="198,83,0,0" TextWrapping="Wrap" Name="produto_nome" VerticalAlignment="Top"/>
        <Label FontSize="20" Content="Quantidade: " HorizontalAlignment="Left" Margin="28,130,0,0" VerticalAlignment="Top"/>
        <TextBox FontSize="15" HorizontalAlignment="Left" Height="23" Margin="198,144,0,0" TextChanged="quantidade_produto_TextChanged" TextWrapping="Wrap" Name="quantidade_produto" VerticalAlignment="Top" Width="120"/>
        <Button Content="Adicionar ao Carrinho" Click="adicionar_carrinho" HorizontalAlignment="Left" Margin="120,209,0,0" VerticalAlignment="Top" Width="143" Height="31" RenderTransformOrigin="0.64,0.504"/>

    </Grid>
</Window>
